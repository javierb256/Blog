<!-- this is a partial field only contains input fields -->
<!-- The new article inputs and edit article inputs are the same so instead of retyping we simply store them here -->
<div class="form-group">
    <label for="title">Title</label>
    <!-- the required attribute forces the input to have data entered -->
    <input required value="<%= article.title %>" 
    type="text" name="title" id="title"
    class="form-control">
</div>
<div class="form-group mt-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group mt-4">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<div class="mt-3">
    <a href="/" class="btn btn-secondary">Cancel</a>
    <!-- save button will call articles.js post -->
    <button type="submit" class="btn btn-primary">Save</button>
</div>